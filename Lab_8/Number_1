#include <iostream>
#include <algorithm>
using namespace std;

int main() {
    const int m = 12;
    int arr[m];
    
    cout << "Enter " << m << " integers:\n";
    for (int i = 0; i < m; i++) {
        cin >> arr[i];
    }
    
    cout << "Original array: ";
    for (int i = 0; i < m; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    
    sort(arr, arr + m);
    
    cout << "Ascending order: ";
    for (int i = 0; i < m; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    
    sort(arr, arr + m, greater<int>());
    
    cout << "Descending order: ";
    for (int i = 0; i < m; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    
    return 0;
}
