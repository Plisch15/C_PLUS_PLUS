#include <iostream>

struct Time {
    int hours = 0;
    int minutes = 0;
};

int main() {
    Time t;
    int addMinutes;

    std::cin >> t.hours;
    std::cin >> t.minutes;
    std::cin >> addMinutes;

    if (t.hours < 0 || t.hours >= 24 || t.minutes < 0 || t.minutes >= 60 || addMinutes < 0) {
        std::cout << "Invalid input\n";
        return 1;
    }

    int totalMinutes = t.hours * 60 + t.minutes + addMinutes;
    t.hours = (totalMinutes / 60) % 24;
    t.minutes = totalMinutes % 60;

    std::cout << t.hours << ":" << (t.minutes < 10 ? "0" : "") << t.minutes << "\n";

    return 0;
}
