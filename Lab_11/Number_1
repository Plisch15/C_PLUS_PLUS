#include <iostream>

using namespace std;

struct Time {
    int hours = 0;
    int minutes = 0;
};

int main() {
    Time t;
    int addMinutes;
    cout << "Hour:";
    cin >> t.hours;
    cout << "Minutes:";
    cin >> t.minutes;
    cout << "AddMinutes:";
    cin >> addMinutes;

    if (t.hours < 0 || t.hours >= 24 || t.minutes < 0 || t.minutes >= 60 || addMinutes < 0) {
        cout << "Invalid input\n";
        return 1;
    }

    int totalMinutes = t.hours * 60 + t.minutes + addMinutes;
    t.hours = (totalMinutes / 60) % 24;
    t.minutes = totalMinutes % 60;

    cout << "Time:" << t.hours << ":" << (t.minutes < 10 ? "0" : "") << t.minutes << "\n";

    return 0;
}
