#include <iostream>

using namespace std;

int main() {
    const int m = 4;
    const int n = 3;
    int a[m][n];

    for (int i = 0; i < m; ++i) {
        cout << "Enter the numbers for row " << i + 1 << ":\n";
        for (int j = 0; j < n; ++j) {
            cout << "  Element [" << i + 1 << "][" << j + 1 << "]: ";
            cin >> a[i][j];
        }
    }

    cout << "\nResult:\n";

    for (int i = 0; i < m; ++i) {
        int evenCount = 0;
        for (int j = 0; j < n; ++j) {
            if (a[i][j] % 2 == 0) evenCount++;
        }
        cout << "Row " << i + 1 << ": " << evenCount << " even numbers\n";
    }

    return 0;
}
