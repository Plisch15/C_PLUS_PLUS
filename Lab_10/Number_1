#include <iostream>

int main() {
    const int m = 4;
    const int n = 3;
    int a[m][n];

    for (int i = 0; i < m; ++i) {
        for (int j = 0; j < n; ++j) {
            std::cin >> a[i][j];
        }
    }

    for (int i = 0; i < m; ++i) {
        int evenCount = 0;
        for (int j = 0; j < n; ++j) {
            if (a[i][j] % 2 == 0) evenCount++;
        }
        std::cout << "Row " << i << ": " << evenCount << " even numbers\n";
    }

    return 0;
}

